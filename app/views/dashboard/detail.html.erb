<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasWorks">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasLabel">Select Works</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
  </div>
  <div class="offcanvas-body" id="nav-table-div">
    <div class="row py-1">
      <div class="col">
        <div class="btn-group" role="group">
          <button data-bs-toggle="offcanvas" data-bs-target="#offcanvasWorks" onclick="loadWork(0)" type="button" class="btn btn-secondary" title="Show">            <i class="bi bi-eye"></i></button>
          <button data-bs-toggle="offcanvas" data-bs-target="#offcanvasWorks" onclick="loadWork(1)" type="button" class="btn btn-secondary" title="Add To View">     <i class="bi bi-plus-lg"></i></button>
          <button data-bs-toggle="offcanvas" data-bs-target="#offcanvasWorks" onclick="loadWork(2)" type="button" class="btn btn-secondary" title="Remove From View"><i class="bi bi-dash-lg"></i></button>
          <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#editModal" title="Edit"><i class="bi bi-pencil-square"></i></button>
        </div>
      </div>
      <div class="col buttons-toolbar d-flex justify-content-end gx-2 mx-2"></div>
    </div>
    <%= render partial: "dashboard/summary", locals: {format: @format, data_param: nil} %>
  </div>
</div>

<div class="row d-flex flex-fill">
  <div class="col-1 py-5" style="max-width: 60px;">
    <div id="summary_button" class="btn btn-outline-secondary d-inline-flex align-items-center" style="height: 50%;" onclick="switchSummary(0)" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWorks" title="Select Works">
      <i class="bi bi-arrow-bar-right"></i>
    </div>
    <div id="current_button" class="btn btn-outline-secondary d-inline-flex align-items-center" style="height: 50%;" onclick="switchSummary(1)"  data-bs-toggle="offcanvas" data-bs-target="#offcanvasWorks" title="Current Works">
      <i class="bi bi-arrow-bar-left"></i>
    </div>
  </div>
  <div class="col-1 flex-grow-1">
    <div id="table_toolbar">
      <ul class="nav nav-tabs" id="sub_tables_nav">
      </ul>
    </div>
    <table
      id="work_table"
      data-advanced-search="true"
      data-cache="false"
      data-filter-control="true"
      data-id-table="advancedTable"
      data-reorderable-columns="false"
      data-reorderable-rows="false"
      data-resizable="true"
      data-search="true"
      data-show-columns-search="true"
      data-show-columns-toggle-all="true"
      data-show-columns="true"
      data-use-row-attr-func="false"
      data-show-multi-sort="true"
      data-toolbar="#table_toolbar"
      data-show-search-clear-button="true"
      data-buttons="detailTableButtons"
    >
    </table>
  </div>
</div>

<div class="modal fade modal-xl" id="modal_view_div" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body d-flex justify-content-center">
        <div id="modal_view"></div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="focusModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="focusModalLabel">Focus on keys</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div class="d-flex">
          <select id="focusSelect" class="form-select"></select>
          <button onclick="addFocusKey();" type="button" class="btn btn-secondary bi bi-plus"></button>
        </div>
        <div class="py-2 px-2">
          <ul id="focusKeyList" class="list-group">
          </ul>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button onclick="focusKeys();" type="button" class="btn btn-primary">Apply</button>
      </div>
    </div>
  </div>
</div>

<%= render partial: "edit" %>
