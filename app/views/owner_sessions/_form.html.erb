<%= form_with url: login_path, method: :post, id: "login_form", local: false do |form| %>
  <div class="form-floating mb-3">
    <input placeholder="" type="text" class="form-control" id="name" name="name">
    <label for="work_name">Name</label>
  </div>
  <div class="mb-3">
    <label for="input_user_signature" class="form-label" > Signature File </label>
    <%= form.file_field :signature, class: "form-control", id: "input_user_signature" %>
  </div>
  <%= form.submit "Login", class: "btn btn-primary my-2" %>
<% end %>
