<turbo-frame id="login_fram">
  <div class="modal-header">
    <% if @owner.nil? %>
      <h1 class="modal-title fs-5" >Login</h1>
    <% else %>
      <h1 class="modal-title fs-5" ><%= @owner.name %></h1>
    <% end %>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
    <% if @owner.nil? %>
      <%= form_with url: login_path, method: :post, id: "login_form", local: false do |form| %>
        <div class="modal-body">
          <div class="form-floating mb-3">
            <input placeholder="" type="text" class="form-control" id="name" name="name">
            <label for="work_name">Name</label>
          </div>
          <div class="mb-3">
            <label for="input_user_signature" class="form-label" > Signature File </label>
            <%= form.file_field :signature, class: "form-control", id: "input_user_signature" %>
          </div>
          <div>
            <span class="badge text-bg-danger"><%= @message %></span>
          </div>
        </div>
        <div class="modal-footer">
          <%= form.submit "Login", class: "btn btn-primary" %>
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      <% end %>
    <% else %>
      <div class="modal-body">
        <span>Logout?</span>
      </div>
      <div class="modal-footer">
        <a href="/logout" type="button" value="Logout" class="btn btn-primary my-2">Logout</a>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    <% end %>
  </div>
</turbo-frame>
